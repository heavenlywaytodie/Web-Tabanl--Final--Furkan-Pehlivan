@model Web_Tabanlı_Final.Data.Film

@{
    ViewData["Title"] = Model.FilmAd;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.FilmAd</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .film-detail-container {
            padding: 20px;
            margin-left: 220px; /* Sidebar genişliği ile uyumlu */
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .film-detail-card {
            background: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            max-width: 600px;
            width: 100%;
        }

        .film-poster {
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .comments-container, .comment-form {
            margin: 20px auto;
            max-width: 600px;
            width: 100%;
        }

            .comments-container h3, .comment-form h3 {
                margin-bottom: 10px;
                font-size: 1.5rem;
            }

        .comment {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 10px;
            margin-bottom: 10px;
        }

            .comment strong {
                display: block;
                font-weight: 600;
                margin-bottom: 5px;
            }

        .comment-form label {
            display: block;
            margin: 10px 0 5px;
            font-weight: 500;
        }

        .comment-form input, .comment-form textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

        .comment-form button {
            margin-top: 10px;
            padding: 10px 20px;
            background: #333;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .comment-form button:hover {
                background: #555;
            }

        footer {
            background: #333;
            color: white;
            padding: 20px;
            text-align: center;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <div class="film-detail-container">
        <div class="film-detail-card">
            <img src="@Model.PosterURL" alt="@Model.FilmAd Afişi" class="film-poster">
            <h2>@Model.FilmAd</h2>
            <p>Year: @Model.Yil</p>
            <p>@Model.Aciklama</p>
        </div>

        <div class="comments-container">
            <h3>Yorumlar</h3>
            @if (Model.Yorumlar != null && Model.Yorumlar.Any())
            {
                @foreach (var yorum in Model.Yorumlar)
                {
                    <div class="comment">
                        <strong>@yorum.KullanıcıAdı</strong>
                        <p>@yorum.Metin</p>
                    </div>
                }
            }
            else
            {
                <p>Henüz yorum yapılmamış.</p>
            }
        </div>

        <div class="comment-form">
            <h3>Yorum Yap</h3>
            <form method="post" asp-action="YorumYap">
                <input type="hidden" name="FilmID" value="@Model.FilmID">
                <label for="KullanıcıAdı">Adınız:</label>
                <input type="text" id="KullanıcıAdı" name="KullanıcıAdı" required>
                <label for="Metin">Yorumunuz:</label>
                <textarea id="Metin" name="Metin" rows="3" required></textarea>
                <button type="submit">Gönder</button>
            </form>
        </div>
    </div>
    <footer>
        <p>&copy; 2025 CineCritic. Furkan Pehlivan</p>
    </footer>
</body>
</html>



